<header class="header">
  <nav class="top-bar clearfix">
    <h1 class="home-link">
      <a href="/#">Trollolol</a>
    </h1>

    <ul class="right-links clearfix">

      <% if signed_in? %>
        <li>
          <%= link_to "Sign out", session_url, method: :delete, class: "signout-btn" %>
        </li>
      <% else %>
        <li><%= link_to "Log in", new_session_url %></li>
        <li><%= link_to "Sign up", new_user_url %></li>
      <% end %>

    </ul>


  </nav>
</header>
